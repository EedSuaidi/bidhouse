generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum ItemStatus {
  OPEN
  CLOSED
}

model User {
  id       String @id @default(uuid()) // <--- GANTI JADI UUID
  email    String @unique
  password String
  name     String
  role     Role   @default(USER)

  isVerified        Boolean @default(false)
  verificationToken String?
  resetToken        String?

  createdAt DateTime @default(now())

  // Relasi
  bids     Bid[]
  itemsWon Item[] @relation("ItemWinner")
}

model Item {
  id           String  @id @default(uuid()) // <--- GANTI JADI UUID
  name         String
  description  String  @db.Text
  startPrice   Decimal @db.Decimal(10, 2)
  currentPrice Decimal @db.Decimal(10, 2)
  imageUrl     String

  startTime DateTime
  endTime   DateTime
  status    ItemStatus @default(OPEN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi
  bids     Bid[]
  winnerId String? // <--- TIPE DATA RELASI JUGA GANTI STRING
  winner   User?   @relation("ItemWinner", fields: [winnerId], references: [id])
}

model Bid {
  id        String   @id @default(uuid()) // <--- GANTI JADI UUID
  amount    Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())

  // Relasi
  userId String // <--- GANTI STRING
  user   User   @relation(fields: [userId], references: [id])
  itemId String // <--- GANTI STRING
  item   Item   @relation(fields: [itemId], references: [id])

  @@index([itemId])
}
